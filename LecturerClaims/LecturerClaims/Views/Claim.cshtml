@model IEnumerable<Claim>

<h1>Claims</h1>
<table class="table">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Date</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td> <!-- Accessing LecturerName directly -->
                <td>@claim.Date.ToShortDateString()</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.Status</td>
                <td>
                    @if (claim.Status == "Pending")
                    {
                        <a href="@Url.Action("Approve", new { id = claim.Id })" class="btn btn-success">Approve</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create")" class="btn btn-primary">Submit New Claim</a>

